# Application
APP_NAME="AI Real Estate Media Generator"
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Database
DATABASE_URL=sqlite:///./data/app.db

# Redis (for Celery task queue)
REDIS_URL=redis://localhost:6379/0

# File Storage
UPLOAD_DIR=./uploads
OUTPUT_DIR=./outputs
TEMP_DIR=./temp
MAX_UPLOAD_SIZE_MB=50

# GPU Processing
GPU_PROVIDER=kaggle  # Options: kaggle, colab, local
BATCH_PROCESSING=true
MAX_BATCH_SIZE=10

# Kaggle API (if using Kaggle)
KAGGLE_USERNAME=your_username
KAGGLE_KEY=your_api_key

# Model Configuration
IMAGE_ENHANCEMENT_MODEL=stabilityai/stable-diffusion-2-1
STAGING_MODEL=lllyasviel/control_v11p_sd15_canny
VIDEO_MODEL=stabilityai/stable-video-diffusion-img2vid

# Generation Parameters
IMAGE_WIDTH=1024
IMAGE_HEIGHT=768
INFERENCE_STEPS=30
GUIDANCE_SCALE=7.5
VIDEO_FRAMES=24
VIDEO_FPS=8

# Quality Assurance
CLIP_SIMILARITY_THRESHOLD=0.75
MAX_RETRIES=3

# LangGraph Agent
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT_SECONDS=300

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
